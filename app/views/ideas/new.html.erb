<h1>SUBMIT AN IDEA</h1>

<%= form_for(@idea) do |f| %>
  <%= f.text_field :name, placeholder: "name" %>
  <%= f.text_field :email, placeholder: "email" %>
  <%= f.text_field :twitter, placeholder: "@twitter" %>
  <%= f.text_area :description, placeholder: "What's your idea?" %>
  <%= f.submit "SEND"%>
<% end %>